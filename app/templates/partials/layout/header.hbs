      {{#if home-page }}
      {{else}}
        <div class='page-header__burger'>
          <button class='page-header__burger-btn'>
            <span></span>
          </button>
        </div>
      {{/if}}
      <div class="page-header__menu">
        {{> common/header-menu items=header-menu home=home-page}}
