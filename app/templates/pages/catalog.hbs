{{!Catalog}}

{{> layout/head page-title="Catalog"}}

{{> layout/header }}

{{> widgets/intro-banner }}

{{#> common/section }}
    <ul class="catalog__goods-list">
        {{#each catalog-list}}
            {{> widgets/card-item card-image=this.image link="product-card.html"
                    name=this.name price=this.price }}
        {{/each}}
        {{> widgets/card-item card-image=catalog-item-big.image link="product-card.html"
                name=catalog-item-big.name
                price=catalog-item-big.price big=" "}}
    </ul>
    <div class="catalog__goods-pagination">
        {{> blocks/catalog-pagination }}
    </div>
{{/common/section}}

{{> layout/footer }}
