                    {{> components/image
                            img="home/00_home"
                            ext="jpg"
                    }}
                </div>
            </div>
        </div>
        <div class="page__banner-footer">
            <button class="page__banner-down">
                {{> ui/svg name="down" }}
            </button>
            <ul class="page__banner-socials">
                <li class="page__banner-socials-item">
                    <a href="#" class="page__banner-socials-link">Facebook</a>
                </li>
                <li class="page__banner-socials-item">
                    <a href="#" class="page__banner-socials-link">Instagram</a>
                </li>
            </ul>
        </div>
    </div>
</section>

